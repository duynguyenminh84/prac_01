sales = float(input("Enter sales: $"))
bonus = 0
while sales > 0:

   if sales < 1000:
    bonus = 0.1 * sales
    print("Your bonus is $", bonus)
    sales = float(input("Enter sales: $"))
   else:
    bonus = 0.15 * sales
    print("Your bonus is $", bonus)
    sales = float(input("Enter sales: $"))


